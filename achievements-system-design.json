  "xpSources": {
    "quiz_completion": {
      "baseXP": 100,
      "description": "Awarded for completing any quiz"
    },
    "correct_answer": {
      "baseXP": 10,
      "description": "Awarded per correct answer"
    },
    "score_bonus": {
      "ranges": [
        {"min": 70, "max": 79, "multiplier": 1.1, "bonus": 20},
        {"min": 80, "max": 89, "multiplier": 1.25, "bonus": 50},
        {"min": 90, "max": 99, "multiplier": 1.5, "bonus": 100},
        {"min": 100, "max": 100, "multiplier": 2.0, "bonus": 200}
      ],
      "description": "Bonus XP based on final score percentage"
    },
    "speed_bonus": {
      "formula": "max(0, 50 - (completionTime / 60))",
      "maxBonus": 50,
      "description": "Bonus XP for completing quickly"
    },
    "first_attempt_bonus": {
      "baseXP": 25,
      "description": "Extra XP for passing on first attempt"
    }
  },
  "dataModels": {
    "userProfile": {
      "description": "Persistent user profile with XP and achievements",
      "schema": {
        "userId": "UUID - unique identifier",
        "userName": "string - display name",
        "totalXP": "number - lifetime XP earned",
        "currentTier": "string - current tier ID",
        "quizzesCompleted": "number - total quizzes completed",
        "averageScore": "number - average score across all quizzes",
        "bestScore": "number - highest score achieved",
        "currentStreak": "number - current consecutive high scores",
        "bestStreak": "number - best streak achieved",
        "achievements": [
          {
            "achievementId": "string - achievement ID",
            "unlockedAt": "ISO8601 - when unlocked",
            "progress": "number - current progress (0-100)"
          }
        ],
        "quizHistory": [
          {
            "quizName": "string",
            "score": "number",
            "percentage": "number",
            "xpEarned": "number",
            "completedAt": "ISO8601",
            "rank": "number - position in that quiz",
            "timeTaken": "number - seconds"
          }
        ],
        "createdAt": "ISO8601",
        "lastActive": "ISO8601"
      }
    },
    "leaderboardEntry": {
      "description": "Real-time leaderboard entry",
      "schema": {
        "userId": "UUID",
        "userName": "string",
        "totalXP": "number",
        "currentTier": "string",
        "rank": "number - overall rank",
        "quizzesCompleted": "number",
        "averageScore": "number",
        "recentAchievements": "array - last 3 achievements",
        "badges": "array - visible badges to display",
        "lastUpdated": "ISO8601"
      }
    },
    "quizLeaderboard": {
      "description": "Per-quiz leaderboard for active/ongoing quiz",
      "schema": {
        "quizName": "string",
        "entries": [
          {
            "userId": "UUID",
            "userName": "string",
            "score": "number",
            "percentage": "number",
            "rank": "number",
            "timeTaken": "number - seconds",
            "completedAt": "ISO8601",
            "isTeam": "boolean",
            "teamName": "string - if team submission"
          }
        ],
        "updatedAt": "ISO8601"
      }
    },
    "achievementProgress": {
      "description": "Tracks progress toward achievements",
      "schema": {
        "userId": "UUID",
        "achievementId": "string",
        "currentValue": "number - current progress value",
        "targetValue": "number - value needed to unlock",
        "percentage": "number - progress percentage",
        "lastUpdated": "ISO8601"
      }
    }
  }
